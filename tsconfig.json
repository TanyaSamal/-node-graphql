{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es6",
    "module": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
    "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["src/**/*"],
  "exclude": [ "node_modules"]
}
